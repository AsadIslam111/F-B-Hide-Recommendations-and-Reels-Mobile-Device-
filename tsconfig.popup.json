{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["ES5", "ES6", "ES2016", "dom", "es2016", "dom.iterable"],
    "target": "ES2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./lib/popup",
    "removeComments": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/@types/*"]
    },
  },
  "type": "module",
  "include": [
    "src/popup/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}